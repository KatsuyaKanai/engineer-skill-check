<div class='session'>
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>
  <%= form_for(:employees, url: login_path) do |f| %>
    <div class='form-group'>
      <%= f.label 'アカウント', class: 'form-label' %>
      <%= f.text_field :account, class: 'form-control', id: 'session_account' %>
    </div>
    <div class='form-group'>
      <%= f.label 'パスワード', class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', id: 'sesson_password' %>
    </div>
    <%- if flash[:alert] %>
      <div class='form-group'>
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>
    <div class='row-center'>
      <p><%= f.submit 'ログイン',class: 'form-submit' %></p>
    </div>
  <% end %>
</div>
